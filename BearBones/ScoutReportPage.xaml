<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BearBones.ScoutReportPage">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
			<Button Text="Done" Clicked="OnDoneClicked" />
			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Picker x:Name="driveType" Title="DriveType"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Mecanum</x:String> 
			            <x:String>Tank</x:String>
			            <x:String>Swerve</x:String> 
			            <x:String>Other</x:String>
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="buildQuality" Title="Build Quality"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Superb</x:String> 
			            <x:String>High</x:String>
			            <x:String>OK</x:String> 
			            <x:String>Low</x:String>
			            <x:String>Junk</x:String>
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="autoCapability"  Title="Auto"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Never Moved</x:String> 
			            <x:String>In Zone</x:String>
			            <x:String>1 Container</x:String>
			           	<x:String>1 Tote</x:String> 
			            <x:String>Tote Stack</x:String>
			            <x:String>1 Container</x:String>  
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="lastYear" Title="Last Year"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>World</x:String> 
			            <x:String>Regional</x:String>
			            <x:String>Prelim</x:String> 
			        </Picker.Items>
			    </Picker>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Picker x:Name="pointsScored" Title="Points Scored"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>0</x:String> 
			            <x:String>5</x:String>
			            <x:String>10</x:String>
			            <x:String>20</x:String>
			            <x:String>30</x:String>
			          	<x:String>40</x:String>
			            <x:String>50</x:String>
			            <x:String>60</x:String> 
			            <x:String>70</x:String>
			            <x:String>80</x:String>
			            <x:String>90</x:String>
			            <x:String>100</x:String>
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="maxStack" Title="Tallest Stack"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>1</x:String> 
			            <x:String>2</x:String>
			            <x:String>3</x:String>
			          	<x:String>4</x:String> 
			            <x:String>5</x:String>
			            <x:String>6</x:String>  
			        </Picker.Items>
			    </Picker>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Picker x:Name="teamQuality" Title="Team Quality"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Superb</x:String> 
			            <x:String>High</x:String>
			            <x:String>OK</x:String> 
			            <x:String>Low</x:String>
			            <x:String>Poor</x:String>
			        </Picker.Items>
			    </Picker>
			</StackLayout>

			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Label Text="NoodleInContainer"></Label>
				<Label Text="NoodleCleanup"></Label>
				<Label Text="NoodleBonus"></Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal"	HeightRequest="60">
				<Switch x:Name="noodleInContainer" 	WidthRequest="100"></Switch>
				<Switch x:Name="noodleCleanup" 		WidthRequest="100"></Switch>
				<Switch x:Name="noodleBonus" 		WidthRequest="100"></Switch>
			</StackLayout>

			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Label Text="Broke Down"></Label>
				<Label Text="Rebuilds Stack"></Label>
				<Label Text="Yellow Coop Stack"></Label>
			</StackLayout>

			<StackLayout Orientation="Horizontal" 	HeightRequest="60">
				<Switch x:Name="brokeDown"			WidthRequest="100"></Switch>
				<Switch x:Name="rebuildsStack"		WidthRequest="100"></Switch>
				<Switch x:Name="yellowCoopStack"	WidthRequest="100"></Switch>
			</StackLayout>
				
			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Label Text="Container On Stack"></Label>
				<Label Text="Grabs Containers"></Label>
				<Label Text="Grabs Container Off Step"></Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" 	HeightRequest="60">
				<Switch x:Name="containerOnStack" 	WidthRequest="100"></Switch>
				<Switch x:Name="grabsContainer" 		WidthRequest="100"></Switch>
				<Switch x:Name="grabsContainerOffStep" 	WidthRequest="100"></Switch>
			</StackLayout>

			<StackLayout Orientation="Horizontal" HeightRequest="60">
				<Label Text="Stacks Totes"></Label>
				<Label Text="Grabs Totes"></Label>
				<Label Text="Grabs Totes Off Step"></Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" 	HeightRequest="60">
				<Switch x:Name="grabsTote" 	WidthRequest="100"></Switch>
				<Switch x:Name="grabsToteOffStep" 	WidthRequest="100"></Switch>
				<Switch x:Name="stacksTotes" 		WidthRequest="100"></Switch>
			</StackLayout>
			<Entry>x:Name="notes" Keyboard="Text" Placeholder="notes:"</Entry>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
