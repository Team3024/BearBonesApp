<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BearBones.ScoutReportPage">
	<ContentPage.Content>
	<ScrollView>
		<StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Button Text="Cancel" Clicked="OnCancelClicked" HorizontalOptions="FillAndExpand" />
				<Button Text="Submit" Clicked="OnDoneClicked" HorizontalOptions="FillAndExpand"  />
			</StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="Scout Name:"></Label>
				<Entry x:Name="scout" Keyboard="Text" Placeholder="Your Name Here..."></Entry>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="Match Number:"></Label>
				<Entry x:Name="match" Keyboard="Text" Placeholder="Match Number here..."></Entry>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
				<Label Text="Notes Name:"></Label>
				<Entry x:Name="notes" Keyboard="Text" Placeholder="Your Notes Here..."></Entry>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Last Year"></Label>
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Build Quality" ></Label>
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Drive Type" ></Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Picker x:Name="lastYear" SelectedIndex="0" Title="Last Year"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>World</x:String> 
			            <x:String>Regional</x:String>
			            <x:String>Prelim</x:String>
			            <x:String>none</x:String>
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="buildQuality" SelectedIndex="0" Title="Build Quality"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Superb</x:String> 
			            <x:String>High</x:String>
			            <x:String>OK</x:String> 
			            <x:String>Low</x:String>
			            <x:String>Junk</x:String>
			         	<x:String>none</x:String>
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="driveType" SelectedIndex="0" Title="DriveType"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Mecanum</x:String> 
			            <x:String>Tank</x:String>
			            <x:String>Swerve</x:String> 
			            <x:String>Other</x:String>
			           	<x:String>none</x:String>
			        </Picker.Items>
			    </Picker>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Team Quality" FontSize="12"></Label>
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Tallest Stack" FontSize="12"></Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Picker x:Name="teamQuality" SelectedIndex="0" Title="Team Quality"  HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>Superb</x:String> 
			            <x:String>High</x:String>
			            <x:String>OK</x:String> 
			            <x:String>Low</x:String>
			            <x:String>Poor</x:String>
			           	<x:String>none</x:String>
			        </Picker.Items>
			    </Picker>
				<Picker x:Name="maxStack" Title="Tallest Stack" SelectedIndex="0" HorizontalOptions="FillAndExpand">
			        <Picker.Items>
			            <x:String>1</x:String> 
			            <x:String>2</x:String>
			            <x:String>3</x:String>
			          	<x:String>4</x:String> 
			            <x:String>5</x:String>
			            <x:String>6</x:String>
			           	<x:String>none</x:String>  
			        </Picker.Items>
			    </Picker>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Auto Capability" FontSize="12"></Label>
				<Label HorizontalOptions="CenterAndExpand" BackgroundColor="Silver" TextColor="Black"  Text="Points Scored" FontSize="12"></Label>
			</StackLayout>
			<StackLayout Orientation="Horizontal" HeightRequest="40">
				<Picker x:Name="autoCapability" SelectedIndex="0" Title="Auto"  HorizontalOptions="CenterAndExpand">
			        <Picker.Items>
			            <x:String>Never Moved</x:String> 
			            <x:String>In Zone</x:String>
			            <x:String>1 Container</x:String>
			           	<x:String>1 Tote</x:String> 
			            <x:String>Tote Stack</x:String>
			           	<x:String>none</x:String> 
			        </Picker.Items>
			    </Picker>
			    <Picker x:Name="pointsScored" SelectedIndex="0"  Title="Points Scored"  HorizontalOptions="CenterAndExpand">
			        <Picker.Items>
			            <x:String>0</x:String> 
			            <x:String>5</x:String>
			            <x:String>10</x:String>
			            <x:String>20</x:String>
			            <x:String>30</x:String>
			          	<x:String>40</x:String>
			            <x:String>50</x:String>
			            <x:String>60</x:String> 
			            <x:String>70</x:String>
			            <x:String>80</x:String>
			            <x:String>90</x:String>
			            <x:String>100</x:String>
			          	<x:String>150</x:String>
			            <x:String>200</x:String>
			           	<x:String>250</x:String>
			            <x:String>none</x:String>
			        </Picker.Items>
			    </Picker>
			</StackLayout>
			  <Grid>
			    <Grid.RowDefinitions>
			      <RowDefinition Height="Auto" />
			      <RowDefinition Height="*" />
			       <RowDefinition Height="50" />
			    </Grid.RowDefinitions>

			    <Grid.ColumnDefinitions>
			      <ColumnDefinition Width="*" />
			      <ColumnDefinition Width="*" />
			      <ColumnDefinition Width="*" />
			    </Grid.ColumnDefinitions>
				
				<Label BackgroundColor="Silver" TextColor="Black" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Noodle in Can" FontSize="12" ></Label>
				<Label BackgroundColor="Silver" TextColor="Black" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Noodle Cleanup" FontSize="12"></Label>
				<Label BackgroundColor="Silver" TextColor="Black" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Noodle Bonus" FontSize="12"></Label>
	
				<Switch BackgroundColor="White" x:Name="noodleInContainer" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="noodleCleanup" 	 Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="noodleBonus" 		 Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>

				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Broke Down" FontSize="12"></Label>
				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Rebuilds Stack" FontSize="12"></Label>
				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Yellow Stack" FontSize="12"></Label>

				<Switch BackgroundColor="White" x:Name="brokeDown"		 Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="rebuildsStack"	 Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="yellowCoopStack"	 Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>

				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Can On Stack" FontSize="12"></Label>
				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Grabs Can" FontSize="12"></Label>
				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Grabs Can Off Step" FontSize="12"></Label>
		
				<Switch BackgroundColor="White" x:Name="containerOnStack" 		 Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="grabsContainer" 		 Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="grabsContainerOffStep" 	 Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>

				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Stacks Totes" FontSize="12"></Label>
				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Grabs Totes" FontSize="12"></Label>
				<Label  BackgroundColor="Silver" TextColor="Black" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="1" XAlign="Center" YAlign="Center" Text="Grabs Totes Off Step" FontSize="12"></Label>

				<Switch BackgroundColor="White" x:Name="grabsTote" 			 Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="grabsToteOffStep" 	 Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>
				<Switch BackgroundColor="White" x:Name="stacksTotes" 		 Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="1" HorizontalOptions="CenterAndExpand"></Switch>

			</Grid>
		</StackLayout>
	</ScrollView>
	</ContentPage.Content>
</ContentPage>
